// Demo List Box
//
      itemDef 
      {
        name demolist
        rect 190 171 370 220
        type ITEM_TYPE_LISTBOX
        style WINDOW_STYLE_SHADER
        elementwidth 120
        elementheight 20
        background "ui/assets/menu_box1"
        textscale 0.25
        elementtype LISTBOX_TEXT
        feeder FEEDER_DEMOS
        textalign ITEM_ALIGN_LEFT
        textaligny 14
        border WINDOW_BORDER_FULL
        bordercolor .5 .5 .5 .5
        outlinecolor .5 .5 .5 .5
        forecolor 1 1 1 1
        backcolor 0 0 .5 .25
        visible MENU_TRUE
        doubleClick
        {
          close demo ; 
          uiScript RunDemo 

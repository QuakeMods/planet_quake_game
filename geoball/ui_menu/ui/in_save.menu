#include "ui/menudef.h"

{
    menuDef 
    {
      name "insave"
      rect 0 0 640 480
      focusColor 1 1 1 1
      onOpen 
      { 
        playlooped "music/sonic1.wav" ;
        uiScript LoadSave ;
        setcvar ui_SaveGame "Autosave" 
      }
	
      onClose
